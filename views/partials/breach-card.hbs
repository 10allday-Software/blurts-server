<!--

    {{ cardClass }} is determined by which page the card is on 
    {{ Category }} refers to the type of breach and is used primarily for card styling on the /breaches page 

-->

<a class="breach-card {{ cardType }} {{#if NewBreach}} new-breach {{/if}}" href="/?breach={{ Name }}">
  <div class="breach-card-title-wrapper flx {{ Category }} {{ cardClass }}">
    <span class="breach-title demi">{{ Title }}</span>
    <div class="breach-logo-wrapper">
      <img alt="" class="breach-logo lazy-img" {{#if lazyLoad}} data-srcset="/img/logos/{{ LogoPath }}" src="/img/logos/missing-logo-icon.png" {{else}} src="/img/logos/{{ LogoPath }}" {{/if}} />
    </div>
  </div>
  <div class="breach-info-wrapper flx flx-col">
    <div class="flx flx-col">
      <span class="breach-info"><span class="demi key">{{ String.AddedDate }}</span>{{ AddedDate }}</span>
      {{#if showPwnCount }}
        <span class="breach-info"><span class="demi key">{{ String.CompromisedAccounts }}</span>{{ PwnCount }}</span>
      {{/if}}
      {{#if DataClasses }}
        <span class="breach-info"><span class="demi key">{{ String.CompromisedData }}</span>{{ DataClasses }}</span>
      {{/if}}
    </div>
    <div class="breach-card-link-wrap">
      <span class="more-about-this-breach">{{ String.MoreInfoLink }}<span class="arrow">&#8594;</span></span>
    </div>
  </div>
</a>
