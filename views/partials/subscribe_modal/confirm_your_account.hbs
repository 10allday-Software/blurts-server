<div id="confirm-your-account" class="modal-content confirm-your-account">
  <div class="modal-content-wrap">
    <h3 class="section-headline">{{getString "signup-modal-verify-headline"}}</h3>
    <div class="confirm-your-account-icon">
      {{> sprite symID="confirm-sending"}}
    </div>
    <p>{{{getString "signup-modal-verify-blurb"}}}<br>{{getString "signup-modal-verify-expiration"}}</p>
    <button id="resend-data" class="resend-data internal-link">
      {{getString "signup-modal-verify-resend"}}
      <span class="resent-email">{{getString "signup-modal-sent"}}</span>
    </button>
    <button data-analytics-label="After Sign Up" class="close-modal blue-button">
      {{getString "signup-modal-close"}}
    </button>
  </div>
</div>
