<div class="half listings">
  <div class="account wrap-row">
    <div class="image-wrap">
      <img alt="" class="breach-logo" src="/img/logos/{{ LogoPath }}" />
    </div>
    <div class="breach-info-wrap">
      <h4 class="medium">{{ Title }}</h4>
      <span class="breach-info"><span class="medium">{{getString "breach-date"}}</span>{{prettyDate BreachDate }}</span>
      <span class="breach-info"><span class="medium">{{getString "compromised-accounts"}}</span>{{localeString PwnCount }}</span>
      {{#if DataClasses }}
        <span class="breach-info"><span class="medium">{{getString "compromised-data"}}</span>{{localizedBreachDataClasses DataClasses }}</span>
      {{/if}}
    </div>
  </div>
</div>
