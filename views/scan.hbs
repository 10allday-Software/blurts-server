{{!< default }}
<main class="scan-results">
  <div class="section-wrapper breach-container">
    <section class="half">

      {{#ifCompare foundBreaches.length "===" 0}}
        <h3 id="no-breaches" class="section-headline">{{fluentFormat req "no-breaches-headline" breachCount=foundBreaches.length}}</h3>
      {{else}}
        <h3 id="found-breaches" class="section-headline">{{fluentFormat req "found-breaches-headline" breachCount=foundBreaches.length}}</h3>
      {{/ifCompare}}
      
      {{#ifCompare foundBreaches.length ">" 1}}
        {{#if featuredBreach}}
          <p>{{{fluentFormat req "featured-breach-results" featuredBreach=featuredBreach.Title breachCount=(breachMath foundBreaches.length "-" 1)}}}</p>
        {{else}}
          <p>{{fluentFormat req "found-breaches-plural" breachCount=foundBreaches.length}}</p>
        {{/if}}
      </section>
      {{> compromised_accounts }}
      
      {{else}} <!--foundBreaches.length < 1-->
        {{#ifCompare foundBreaches.length "===" 0}}
          <p>{{fluentFormat req "no-breaches-blurb"}}</p>
        {{else}}
          {{#if featuredBreach }}
            {{#if userAccountCompromised}}
              <p>{{{fluentFormat req "featured-breach-only" featuredBreach=featuredBreach.Title userBreached="true"}}}</p>
            {{else}}
              <p>{{{fluentFormat req "featured-breach-other" featuredBreach=featuredBreach.Title userBreached="false"}}}</p>
            {{/if}}
          {{else}}
            <p>{{fluentFormat req "found-breaches-singular" breachCount=foundBreaches.length}}</p>
          {{/if}}
        {{/ifCompare}}
      </section>

        {{#ifCompare foundBreaches.length "===" 0}}
          <section class="third">
            {{> sign_up_button}}
          </section>
        {{else}}
          <section class="half">
            {{#each foundBreaches}}
              {{> breach_listing req=../req}}
            {{/each}}
            {{> hibp_attribution}}
          </section>
        {{/ifCompare}}
    {{/ifCompare}}
  </div>
</main>

{{#ifCompare foundBreaches.length "===" 0}}
  <div id="scan-another-email-container" class="scan-another-email banner">
    {{> scan_another_email}}
  </div>
    {{> password_tips }}
{{else}}
  {{> banners/sign_up_banner}}
  {{> what_to_do }}
  {{> scan_another_email}}
{{/ifCompare}}

