{{!< default }}

<section id="subpage" class="subpage" data-analytics-id="{{ analyticsID }}">
  <section class="section-wrapper">
    {{#ifCompare hash "&&" FXA_ENABLED}}
        <h2 class="section-headline whole" >{{fluentFormat req.supportedLocales "fxa-unsub-headline"}}</h2>
        <p class="sub-head whole">
          {{fluentFormat req.supportedLocales "fxa-unsub-blurb"}}
          <a class="manage-fxa" href="{{getFxaUrl}}" target="_blank" rel="noopener">
            {{fluentFormat req.supportedLocales "manage-fxa"}}
          </a>
        </p>
    {{else}}
      <h2 class="section-headline whole" >{{{ headline }}}</h2>
      <p class="sub-head whole">{{{ subhead }}}</p>
    {{/ifCompare}}
    {{#if whichPartial}}
      {{> (lookup . 'whichPartial') }}
    {{/if}}
  </section>
</section>
