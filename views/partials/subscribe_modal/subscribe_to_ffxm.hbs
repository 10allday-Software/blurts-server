<div id="subscribe-to-ffxm" class="modal-content">
  <div class="modal-content-wrap">
    <h3 class="section-headline">{{{getString "signup-modal-headline"}}}</h3>
    <p>{{{getString "signup-modal-blurb"}}}
      <a id="modal-terms" {{> analytics/link_event eventLabel="Terms & Privacy - Sign Up Modal"}} class="internal-link" href="https://www.mozilla.org/privacy/firefox-monitor/" target="_blank" rel="noopener">
        {{{getString "terms-and-privacy"}}}
      </a>
    </p>
      {{#if FXA_ENABLED}}
        <button id="subscribe-fxa-btn" class="blue-button">{{getString "signup-with-fxa"}}</button>
      {{else}}
        <form action="/user/add" id="subscribe-form" class="form-group" method="post" data-event-category="Sign Up Modal Form" novalidate data-no-csrf>
          <div class="input-group">
            <input id="subscribe-email-input" class="input-group-field" type="email" name="email" placeholder="{{getString "form-signup-placeholder"}}" minlength="1" aria-label="{{getString "form-signup-placeholder"}}"  autocomplete="off" />
            <span id="invalid-signup-email-message" class="error-message">{{getString "form-signup-error"}}</span>
          </div>
          <div class="checkbox-group">
            <input id="additional-emails-checkbox" type="checkbox" name="additional-emails" value="additional-emails" />
            <label for="additional-emails-checkbox">{{getString "form-signup-checkbox"}}</label>
          </div>
          <div class="input-group-button">
            <img class="loader" src="/img/loader.gif" alt="" />
            <input id="subscribe-submit" type="submit" class="button submit-email blue-button" value="{{getString "sign-up"}}"  />
          </div>
        </form>
      {{/if}}
    <button data-analytics-label="Before Sign Up" class="close-modal internal-link" data-event-category="Sign Up Modal Form">{{getString "signup-modal-close"}}</button>
  </div>
</div>

