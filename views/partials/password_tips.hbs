{{!< default }}
  <div class="section-wrapper tips" role="complementary">
    <section id="password-advice" class="whole">
      <h3 class="section-headline">{{getString "pwt-section-headline"}}</h3>
      <h4 class="section-sub-head">{{getString "pwt-section-subhead"}}</h4>
      <p>{{fluentFxa "pwt-section-blurb"}}</p>
    </section>

    {{#loop 1 6 1}}
      <div class="tip third">
        <div class="icon tip-icon tip-icon-{{ this }}"></div>
          <h4 class="medium">{{{getStringID "pwt-headline-" this}}}</h4>
        <p>{{{getStringID "pwt-summary-" this}}}</p>
      </div>
   {{/loop}}
  </div>
