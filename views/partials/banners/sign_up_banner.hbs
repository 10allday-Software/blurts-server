{{#unless req.session.user}}
  {{#if FXA_ENABLED}}
    {{> fxa_enabled/fxa_sign_up_banner}}
  {{else}}
    <div id="sign-up-banner" class="banner">
      <div class="section-wrapper">
        <div class="fourth subscribe-icon-wrapper">
          {{> sprite symID="subscribe"}}
        </div>
        <div class="{{#if featuredBreach.IsSensitive }} three-fourths {{else}} half {{/if}}">
          {{#if featuredBreach.IsSensitive}}
            <h2 class="medium secondary-title">{{fluentFormat req.supportedLocales "get-your-report"}}</h2>
          {{else}}
            <h2 class="medium secondary-title">{{fluentFormat req.supportedLocales "sign-up-for-fxa-alerts"}}</h2>
          {{/if}}
          <p class="demi">{{{fluentFormat req.supportedLocales "signup-banner-blurb"}}}</p>
        </div>
        {{#unless featuredBreach.IsSensitive}}
          <div class="fourth">
            {{> sign_up_button}}
          </div>
        {{/unless}}
      </div>
    </div>
  {{/if}}
{{/unless}}
