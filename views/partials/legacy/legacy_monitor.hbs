<main class="landing-content" data-page-label={{>analytics/landing_page_label}}>
  <section class="section-wrapper">
    <div class="half {{#if featuredBreach}} featured {{/if}}">
      <h2 data-location="landing-page" class="section-headline">
        {{#if featuredBreach }}
          {{{getString "scan-featuredbreach-label" featuredBreach=featuredBreach.Title}}}
        {{else}}
          {{{getString "landing-headline"}}}
        {{/if}}
      </h2>
      {{#if featuredBreach }}

        {{#if featuredBreach.IsSensitive}}
          {{> sign_up_button}}
          <span id="sensitive-featured-breach" class="sensitive-breach-email-required">{{getString "sensitive-breach-email-required"}}</span>
        {{else}}
          {{> scan_form}}
        {{/if}}

      {{else}}
        <p class="landing-blurb">
          {{{getString "landing-blurb"}}}
        </p>
      {{/if}}
    </div>
    <div class="half">
      {{#if featuredBreach}}
        {{> featured_breach }}
      {{else}}
        <span class="demi form-desc">{{getString "scan-label"}}</span>
        {{> scan_form}}
      {{/if}}
    </div>
  </section>
</main>

