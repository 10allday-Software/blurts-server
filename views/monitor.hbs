{{!< default }}
<main class="landing-content">
  <section class="section-wrapper">
    {{#if featuredBreach }}
      <div class="half">
        <h2 class="section-headline">Protect yourself from hackers.<br />Start here.</h2>
        <span class="demi">Find out if your <span class="bold">{{ featuredBreach.Title }}</span> account is compromised.</span>
        {{> scan_form}}
      </div>
      <div class="half">
        {{> featured_breach }}
      </div>
    {{else}}
      <h2 class="whole section-headline">Protect yourself from hackers.<br />Start here.</h2>
        <div class="wrap-row">
          <p class="half">
            Let Firefox Monitor help you stay safe online. Find out what hackers already know about you and get alerts when data breaches put you at risk.
          </p>
        <div class="half">
          <span>Try it out. Enter your email for a basic scan.</span>
          {{> scan_form}}
        </div>
      </div>
    {{/if}}
  </section>
</main>

