{{#each unsafeBreachesForEmail }}
  <tr>
    <td valign="top" style="vertical-align: top;">
      <img style="margin-top: 2px; max-height: 30px; min-width: 30px; max-width: 30px; opacity: 0.5; margin-right: 10px;"  src="https://monitor.firefox.com/img/Password_Tip_2@2x.png" />
    </td>
    <td valign="top" style="vertical-align: top;">
      <h3 style="color: #333333; margin: 0 0 0 0;" color="#333333" >{{ Title }} Breach</h3>
      <p style="margin: 5px 0 5px 0; padding: 0 0 0 0; color: #333333; font-weight: 600;">Breach Date:<span style="font-weight:300; margin-left: 5px; color: #5d5d5d">{{ BreachDate }}</span></p>
      <p style="margin: 5px 0 5px 0; padding: 0 0 0 0; color: #333333; font-weight: 600;">Compromised Accounts:<span style="font-weight:300; margin-left: 5px; color: #5d5d5d">{{ PwnCount }}</span></p>
      <p style="margin: 5px 0 5px 0; padding: 0 0 0 0; color: #333333; font-weight: 600;">Compromised Data:<span style="font-weight:300; margin-left: 5px; color: #5d5d5d">{{ DataClasses }}</span></p>
      <p style="font-weight: 300; margin-top: 5px; color: #5d5d5d;">{{ Description }}</p>
      <br />
    </td>
  </tr>
{{/each}}
